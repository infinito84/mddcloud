@import "normalize.styl"
@import "../bower_components/font-awesome-stylus/stylus/index.styl"

$sidebar = 20%
$app = 80%
$logo_height = 20%
$logo_margin = 10%

@font-face
  font-family 'Ubuntu'
  src url('../fonts/Ubuntu.woff') format('woff'), 
        url('../fonts/Ubuntu.ttf') format('truetype')

body
  background repeat url('data:image/gif;base64,R0lGODlhEAAQAKIAAEFGPy0wLDY7NUtRSEA3MAAAAAAAAAAAACH5BAAAAAAALAAAAAAQABAAAANIGCAAE0yxpWR7loq4LmyCAgLZQ31jGQQEAU3c9LQrGnvBoKUdqTcrGInyC+06q+KIBMulmh8nskGhSW8hlktpMWK4PZRpCksAADs=') fixed
  padding-right 10px
  padding-bottom 10px
  font-family 'Ubuntu'
  font-size 18px
  color #5A5A5A

/*-------Main Container----*/
#app
  background-color white
  margin-left $sidebar
  width $app
  height 100%
  top 0px
  left 0px
  position fixed
  z-index 106

#app>i
  position absolute
  padding 3px 5px
  color rgb(32, 89, 163)
  background-color white
  border 1px solid
  bottom 0px
  left -1px
  opacity .7
  padding-top 4px

#app>i:hover
  opacity 1

/*-----$sidebar----*/
div.sidebar
  background url('data:image/gif;base64,R0lGODlhDAAMAJEAAGJwhktYallnfQAAACH5BAAAAAAALAAAAAAMAAwAAAIkjIBhCBYJxGtMxfROW1jn+VFe1lVcI0EphV2bq2ibF4G12HoFADs=') repeat
  width $sidebar
  max-height 80%
  position fixed
  left 0px
  top 20%
  z-index 105

div.sidebar>ul
  overflow-y hidden
  overflow-x hidden

div.logo
  width $sidebar
  height $logo_height
  position fixed
  top 0px
  left 0px

div.logo>img
  width 150px
  height auto
  position absolute
  left 0px
  right 0px
  top 0px
  bottom 0px
  margin auto
  max-width 90%

/*-----Lateral Menu------*/
ul.menu>li>a
  color white
  border-top 1px solid #858585
  border-bottom 1px solid #4A4A4A
  font-size 15px
  font-weight normal
  text-decoration none
  padding 11px 18px 11px 5px
  text-shadow 1px 1px 2px rgba(0, 0, 0, 0.7)
  display block
  background rgba(0, 0, 0, 0.05)
  position relative
  cursor pointer

ul.menu>li>a:hover
  background rgba(0, 0, 0, 0.1)
  text-decoration underline;

ul.menu
  padding 0px
  margin 0px
  width 100%
  height 100%
  position relative


ul.menu>li
  position relative

ul.menu>li.active>a
  color #466788
  background-color white
  text-shadow none
  font-weight bold
  z-index 105
  box-shadow 0px 0px 7px #000

ul.menu>li.active>i
  color #2E69C3
  z-index 106

ul.menu>li>i
  position absolute
  top 16px
  font-size 14px
  right 5px
  color white

ul.menu>li>ul
  display none
  padding 0px
  margin 0px
  width 100%
  height 100%
  position relative

ul.menu>li>ul>li>a
  color white
  font-size 15px
  font-weight normal
  text-decoration none
  outline none
  text-shadow 1px 1px 2px rgba(0, 0, 0, 0.7)
  display block
  position relative
  background rgba(0, 0, 0, 0.3)
  border-top 1px solid #535353
  border-bottom 1px solid #434343
  padding 2px 14px
  font-size 14px
  cursor pointer

ul.menu>li>ul>li>a.add
  color rgb(35, 250, 35)

ul.menu>li>ul>li>ahover
  background rgba(0, 0, 0, 0.2)

