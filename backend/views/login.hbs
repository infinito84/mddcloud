{{#if success}}
<div class="alert alert-success alert-form" role="alert">
	<strong>{{success}}</strong>
</div>
{{/if}}
{{#if error}}
<div class="alert alert-danger alert-form" role="alert">
	<strong>{{error}}</strong>
</div>
{{/if}}
<div class="well login-form">
	<form class="bs-example form-horizontal" action="/login" method="post">
		<fieldset>
			<legend>{{t 'Log in with your credentials'}}</legend>
			<div class="form-group">
				<label for="cedula" class="col-lg-5 control-label">
					{{t 'E-mail'}}
				</label>
				<div class="col-lg-4">
					<input type="email" class="form-control" name="username" placeholder="{{t 'example@example'}}.com" required="required">
				</div>
			</div>
			<div class="form-group">
				<label for="nombres" class="col-lg-5 control-label">
					{{t 'Password'}}
				</label>
				<div class="col-lg-4">
					<input type="password" name="password" class="form-control" required="required">
				</div>
			</div>
		</fieldset>
		<fieldset>
			<br> <br> 
			<label class="col-lg-4 control-label"></label>
			<div>
			 	<button type="submit" class="btn btn-primary">
			 		{{t 'Log in'}}
			 	</button>
			</div>
		</fieldset>
	</form>
</div>