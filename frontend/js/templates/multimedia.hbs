{{#eq type 'IMAGE'}}
	<i class="fa fa-file-image-o success"></i>
{{/eq}}
{{#eq type 'AUDIO'}}
	<i class="fa fa-file-audio-o primary"></i>
{{/eq}}
{{#eq type 'VIDEO'}}
	<i class="fa fa-file-video-o danger"></i>
{{/eq}}
{{#eq type 'BINARY'}}
	<i class="fa fa-file-o warning"></i>
{{/eq}}

<div>
	<b data="name">{{name}}</b> <span data="description">{{description}}</span>
</div>
<a class="btn btn-inverse" href="{{url}}" target="_blank">{{t 'Download'}}</a>
{{#allow 'ADMIN' 'EDITOR'}}
<button class="btn btn-info edit-multimedia">{{t 'Edit'}}</button>
{{/allow}}