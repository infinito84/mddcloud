<form>
	<fieldset>
		<legend>
			<span>{{t 'Edit Project'}}</span>
		</legend>
		<div class="field">
			<label>{{t 'Creation date'}}</label>
			<input class="small disable" disabled value="{{date creationDate}}" data="creationDate"/>
			<a class="help tooltip" data-tooltip="{{t 'This field cannot modify'}}">?</a>
		</div>
		<div class="field">
			<label>{{t 'Name'}}</label>
			<input class="name medium" value="{{name}}" data="name"/>
			<a class="help tooltip" data-tooltip="{{t 'Write a name for your project'}}">?</a>
		</div>
		<div class="field">
			<label>{{t 'Description'}}</label>
			<textarea class="description large" data="description">{{description}}</textarea>
			<a class="help tooltip" data-tooltip="{{t 'Write a description for your project'}}">?</a>
		</div>
		<div class="field">
			<label>{{t 'Template'}}</label>
			<select class="template medium" data="template">
				<option {{selected template 'AMELIA'}}>AMELIA</option>
				<option {{selected template 'CERULEAN'}}>CERULEAN</option>
				<option {{selected template 'COSMO'}}>COSMO</option>
				<option {{selected template 'CYBOR'}}>CYBOR</option>
				<option {{selected template 'FLATLY'}}>FLATLY</option>
				<option {{selected template 'JOURNAL'}}>JOURNAL</option>
				<option {{selected template 'READABLE'}}>READABLE</option>
				<option {{selected template 'SIMPLEX'}}>SIMPLEX</option>
				<option {{selected template 'SLATE'}}>SLATE</option>
				<option {{selected template 'SPACELAB'}}>SPACELAB</option>
				<option {{selected template 'UNITED'}}>UNITED</option>
			</select>
			<a class="help tooltip" data-tooltip="Choose a template for the Web application that is created">?</a>
		</div>
		<div class="field">
			<label></label>
			<img src="img/themes/{{lower template}}.png" alt="{{t 'Bootswatch Theme'}}">
		</div>
	</fieldset>
</form>