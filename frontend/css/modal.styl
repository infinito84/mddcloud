.modal
	display: none
	position: fixed
	z-index: 600
	border-radius: 5px
	box-shadow: 0px 0px 50px #000
	margin: auto
	background-color: #F7F7F7

.modal>.title
	padding: 10px
	font-size: 24px
	font-weight: bold
	height: 30px

.modal>.content
	overflow: hidden
	padding: 10px
	position: relative
	margin: 5px
	border: 1px solid #ccc
	background-color: white
	border-radius: 4px

.modal>.footer
	position: absolute
	bottom: 0px
	right: 0px
	padding: 10px
	height: 30px

.modal>span.x
	position: absolute
	top: 7px
	right: 13px
	cursor: pointer
	color: #bbb

.modal>span.x:hover
	color: #000

.mask
	top: 0px
	left: 0px
	width: 100%
	height: 100%
	position: fixed
	display: none
	z-index: 590
	background-color: rgba(0, 0, 0, 0.8)
	cursor: pointer